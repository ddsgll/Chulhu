cell = 10px
curImgSize = cell * 8
curHeight = curImgSize + cell * 2

.current
	width 100%
	height curHeight
	padding cell
	padding-left curImgSize + cell * 2
	margin 0
	background #fff
	border-bottom 1px solid #f0f0f0
	box-shadow 0px 1px 3px rgba(0,0,0,.1)
	z-index 10



.current__image
	position absolute
	top cell
	left cell
	height curImgSize
	overflow hidden
	border-radius 4px

	img
		height 100%



.current__artist
	font-size 1.2em
	line-height 1
	margin-bottom cell
	margin-top 16px



.current__title
	font-size 1em
	line-height 1.2
	color #666