{
    "manifest_version": 2,

    "name": "Chtulhu",
    "version": "1.0",

    "content_security_policy": "script-src 'self' https://vk.com; object-src 'self'",

    "permissions": [
        "contextMenus",
    	"activeTab",
    	"tabs",
        "http://*/*",
        "https://*/*",
        "https://vk.com/*"
    ],

    "content_scripts": [{
        "matches": ["*://vk.com/*"],
        "js": ["js/content.js", "js/jquery.js"]
    }],

    "background": {
        "page": "background.html"
    },

    "icons": {
		"128": "128.png"
    },
    
	"browser_action": {
		"default_title": "Call",
		"default_icon": "48.png",
		"default_popup": "popup.html"
	}
}